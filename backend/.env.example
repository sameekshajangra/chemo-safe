# Example environment variables for CHEMO-SAFE backend
# Copy this to a file named '.env' locally when running the project.

# Django
DJANGO_SECRET_KEY=replace-me-with-a-secret
DJANGO_DEBUG=True

# Database (default: sqlite, no changes needed)
DATABASE_URL=sqlite:///db.sqlite3

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Optional: token or basic auth settings
API_TOKEN=your-api-token-here

# Deployment (example)
PORT=8000
